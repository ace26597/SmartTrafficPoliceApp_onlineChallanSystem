<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fine_collection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#d3d3d3"
    android:orientation="vertical"
    tools:context="com.example.krishna.trafficapp.FineCollection">

    <Button
        android:id="@+id/btnpolicename"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        style="?android:attr/borderlessButtonStyle"
        android:text="Police Name"
        android:textColor="@color/primary"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/tvPoliceId"
        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        style="?android:attr/borderlessButtonStyle"
        android:text="Police Id"
        android:textColor="@color/primary"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/btnlice_no"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        style="?android:attr/borderlessButtonStyle"
        android:text="User Licence No"
        android:textColor="@color/primary"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />


    <EditText
        android:id="@+id/edtvehicle_no"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="User Vehicle No."
        android:textSize="16dp"
        android:textColor="@color/primary"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" >
        <requestFocus/>
        </EditText>


    <Button
        android:id="@+id/rulebreak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Rule Voileted"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:background="@color/accent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/getFine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accept Fine Amount"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:background="@color/accent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />
</LinearLayout>
